# Environment Variables for WhatsApp Order Backend

# Database Configuration
DATABASE_URL=postgresql://whatsapp_user:your_db_password@localhost:5432/whatsapp_orders
DATABASE_URL_TEST=postgresql://whatsapp_user:your_db_password@localhost:5432/whatsapp_orders_test
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_orders
DB_USER=whatsapp_user
DB_PASSWORD=your_db_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false
ENVIRONMENT=production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://wp-automation-jayant77778s-projects.vercel.app,https://your-custom-domain.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key-change-this-in-production
WEBHOOK_PATH=/api/webhook/whatsapp

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./whatsapp_sessions
WHATSAPP_HEADLESS=true
WHATSAPP_USER_AGENT=WhatsApp/2.2040.6 Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_5) AppleWebKit/537.36
WHATSAPP_TIMEOUT=30000
WHATSAPP_RETRIES=3

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Export Configuration
EXPORT_DIR=./exports
EXPORT_URL_BASE=https://your-domain.com/api/exports

# AI Integration
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.3
AI_ENABLE=true

# Celery Configuration
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/whatsapp_orders.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Email Configuration (Optional)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
FROM_EMAIL=noreply@yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
DATABASE_BACKUP_HOUR=2

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Development Settings
DEBUG=true
RELOAD=true

# Export Settings
EXPORT_PATH=./exports
MAX_EXPORT_RECORDS=10000
